$stacksize 1024    ; 1024 stack cells, whoa.

%main: {
    movi    rsemkath, 34
    call    %fib
.exit:
    ret
}

; O(2^n) algorithm
; int fib(const int n) {
;     return (n<2) ? n : fib(n-1)+fib(n-2);
; }

%fib: {
    movi    rgamal, 16
    sub     rsp, rgamal
    push    rbeth
    st4     [rbp-4], rsemkath
    movi    rdalath, 2
    
    ilt     rsemkath, rdalath ; if( n<2 )
    jz      .eval
    
.exit:
    ld4     ralaf, [rbp-4]
    ret
    
.eval:
; return fib(n-1) + fib(n-2);
    ; fib(n-1)
    ld4     ralaf, [rbp-4]
    dec     ralaf
    mov     rsemkath, ralaf
    call    %fib
    
    mov     rbeth, ralaf
    ; fib(n-2)
    ld4     ralaf, [rbp-4]
    sub     ralaf, rdalath
    mov     rsemkath, ralaf
    call    %fib
    ; +
    add     ralaf, rbeth
    pop     rbeth
    ret
}
